<div class="content_container main_container">
    <h4 class="promo_main_header" id="mm_title"></h3>
    <div class="direction_container">
        <div class="row">
            <div class="col-md-12">
                <div class="overlay2" onclick="style.pointerEvents='none'"></div>
                <div id="mm_page_content" class="promo_list_desc"></div>
            </div>
            
        </div>
    </div>
</div>
<script>
    $(document).ready(function(e){
        init(e);
        loadMallDataCached(renderPage);
    })
    
    function renderPage(){
        var pathArray = window.location.pathname.split( '/' );
        var slug = pathArray[pathArray.length-1];
        
        prefix = get_prefix();
        $('#top_banner').addClass(slug)
        var pages_json = prefix+"/pages/" + slug + ".json"
        $.getJSON(pages_json).done(function(data) {
            $('#mm_title').html(data.title)
            $('#mm_page_content').html(data.body);
        }).fail(function(jqXHR) {
            if (jqXHR.status == 404) {
                $("#mm_page_content").text("Sorry. We cant find the page you looking for.");
            }
        }); 
        show_content();
    }
</script>